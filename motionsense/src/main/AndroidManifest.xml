<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.md2k.motionsense">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_LOGS" />`
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/app_theme_teal_light"
        tools:replace="android:theme">
        <activity
            android:name="org.md2k.motionsense.ActivityMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.md2k.motionsense.ActivitySettings"
            android:enabled="true"
            android:exported="true"
            android:label="Settings"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="org.md2k.motionsense.ActivitySettings" />
            </intent-filter>
            >
        </activity>
        <activity
            android:name="org.md2k.motionsense.ActivitySettingsPlatform"
            android:enabled="true"
            android:exported="true"
            android:label="Settings: MotionSense"
            android:screenOrientation="portrait"/>
        <service
            android:name=".ServiceMotionSense"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service android:name="org.md2k.motionsense.bluetooth.BleService" android:enabled="true"/>
    </application>

</manifest>
